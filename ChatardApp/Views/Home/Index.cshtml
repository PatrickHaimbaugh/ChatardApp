@model IEnumerable<ChatardApp.Models.Meeting>
@{
    ViewBag.Title = "Home Page";
}

<ul class="meetings">
    @foreach (var meeting in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @meeting.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @meeting.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="coach">
                    @meeting.Coach.Name
                </span>
                <span class="event">
                    @meeting.Event.Name
                </span>
            </div>
        </li>
    }
</ul>